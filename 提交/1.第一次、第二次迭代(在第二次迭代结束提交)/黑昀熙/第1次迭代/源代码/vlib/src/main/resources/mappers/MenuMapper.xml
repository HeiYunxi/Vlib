<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fzsx.vlib.mapper.MenuMapper">

    <select id="get" resultType="com.fzsx.vlib.entity.MenuEntity">
        select menu_id,cname,ename,path,component,icon,pid from menu where menu_id = #{value}
    </select>

    <select id="list" resultType="com.fzsx.vlib.entity.MenuEntity">
        select `menu_id`,`cname`,`ename`,`path`,`component`,`icon`,`pid`,`create_time`,`update_time` from menu
        <where>
            <if test="menu_id != null and menu_id != ''"> and menu_id = #{menuId} </if>
            <if test="cname != null and cname != ''">  and cname = #{cname}</if>
            <if test="ename != null and ename != ''"> and ename = #{ename} </if>
        </where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
            <otherwise>
                order by sort asc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="save" parameterType="com.fzsx.vlib.entity.MenuEntity" useGeneratedKeys="true" keyProperty="userId">
        insert into menu
        (
            `cname`,
            `ename`,
            `path`,
            `component`,
            `icon`,
            `pid`,
        )
        values
            (
                #{cname},
                #{ename},
                #{path},
                #{component},
                #{icon},
                #{pid},
            )
    </insert>

    <update id="update" parameterType="com.fzsx.vlib.entity.MenuEntity">
        update menu
        <set>
            <if test="cname != null">`cname` = #{cname}, </if>
            <if test="ename != null">`ename` = #{ename}, </if>
            <if test="path != null">`path` = #{path}, </if>
            <if test="component != null">`component` = #{component}, </if>
            <if test="icon != null">`icon` = #{icon}, </if>
            <if test="pid != null">`pid` = #{pid} </if>
        </set>
        where menu_id = #{userId}
    </update>

    <delete id="remove">
        delete from menu where menu_id = #{value}
    </delete>

    <select id="listByRoleId" resultType="com.fzsx.vlib.entity.MenuEntity">
        select DISTINCT m.menu_id,m.cname,m.ename,m.path,m.component,m.icon,m.pid
        from menu m,hd_role_menu rm
        where m.menu_id=rm.menu_id and rm.roleId in
        <foreach item="roleId" collection="array" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </select>

    <select id="listByUserId" resultType="com.fzsx.vlib.entity.MenuEntity">
        SELECT DISTINCT
            m.menu_id,
            m.cname,
            m.ename,
            m.path,
            m.component,
            m.icon,
            m.pid
        FROM
            menu m,
            menu_role rm,
            user_role ur
        WHERE
            m.menu_id = rm.menu_id
          AND ur.roleId = rm.roleId
          AND ur.userId= #{userId}
    </select>


</mapper>